#pragma hdrstop
#pragma argsused

#include <stdio.h>
#include "joueur.h"
#include "combiendejoueur.h"
#include "lancer1.h"
#include "lancer2.h"
#include "comptagepoint.h"
#include "initialisejoueur.h"


#ifdef _WIN32
#include <tchar.h>
#else
  typedef char _TCHAR;
  #define _tmain main
#endif

int _tmain(int argc, _TCHAR* argv[]) 
{

int nbjoueurfinal;
int i;

combiendejoueur(&nbjoueurfinal);  //on récupère le nombre de joueurs souhaité


Joueur	*tab_joueurmalloc;
tab_joueurmalloc = malloc(nbjoueurfinal * sizeof(Joueur)); //on alloue de la mémoire pour le nombre de joueurs souhaités

if(tab_joueurmalloc == NULL) //on regarde si l'allocation de mémoire a marché
{
	exit(0); // On arrête tout car on risque une perte de mémoire
}


for(i=0;i<nbjoueurfinal;i++)
{
   initialisejoueur(&tab_joueurmalloc[i]);
}

for(i=0;i<nbjoueurfinal;i++)
{
   lancer1(tab_joueurmalloc[i]);
}




	return 0;
}
